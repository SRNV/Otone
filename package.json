{
  "name": "otone",
  "displayName": "otone",
  "publisher": "SRNV",
  "description": "Support for Ogone Single File components",
  "version": "0.1.0",
  "icon": "public/ogone-svg.png",
  "scripts": {
    "start": "node index.js"
  },
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SRNV/Otone.git"
  },
  "contributes": {
    "title": "Ogone",
    "languages": [
      {
        "id": "ogone",
        "aliases": [
          "ogone",
          "o3",
          "ogone"
        ],
        "extensions": [
          ".o3",
          ".ogone"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/injection.template.json",
        "scopeName": "textnodes.evaluated.o3",
        "injectTo": [
          "source.o3"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "typescript",
          "source.ts": "ts"
        }
      },
      {
        "path": "./syntaxes/injection.flag.json",
        "scopeName": "injection.flag.o3",
        "injectTo": [
          "source.o3"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "typescript",
          "source.ts": "ts"
        }
      },
      {
        "path": "./syntaxes/injection.proto.json",
        "scopeName": "system.proto.o3",
        "injectTo": [
          "source.o3"
        ]
      },
      {
        "path": "./syntaxes/injection.proto.json",
        "scopeName": "injection.style.o3",
        "injectTo": [
          "source.o3"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "css",
          "source.css": "css"
        }
      },
      {
        "language": "ogone",
        "scopeName": "source.o3",
        "path": "./syntaxes/ogone.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "typescript",
          "meta.embedded.block.javascript": "javascript",
          "source.js": "js",
          "source.css": "css",
          "source.yaml": "yaml",
          "source.html": "html",
          "meta.embedded.block.ts": "ts",
          "meta.embedded.block.yml": "yml",
          "meta.embedded.block.yaml": "yaml",
          "meta.embedded.block.html": "html",
          "meta.embedded.block.css": "css"
        }
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "^3.14.0"
  },
  "dependencies": {
    "typescript-styled-plugin": "*",
    "any-json": "^3.1.0",
    "nodemon": "^2.0.4",
    "y2j": "^1.0.4"
  }
}
