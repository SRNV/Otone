{
	"name": "otone",
	"displayName": "otone",
	"publisher": "SRNV",
	"description": "Support for Ogone Single File components",
	"version": "0.1.78",
	"icon": "public/ogone-svg.png",
	"main": "./extension/index.js",
	"activationEvents": [
		"onLanguage:ogone",
		"onLanguage:o3"
	],
	"scripts": {
		"start": "node index.js",
		"publish": "vsce publish -p a6ejs3tzz4xblqzrd2fxbn7kwnaxpkolxg2wgdnibnbg6wn2dg6a",
		"hot-publish": "npm start; git add .; git commit -m 'hot publish'; git push; npm version patch; npm run publish",
		"open:vscode-host": "code --extensionDevelopmentPath=."
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/SRNV/Otone.git"
	},
	"contributes": {
		"title": "Ogone",
		"languages": [
			{
				"id": "ogone",
				"aliases": [
					"ogone",
					"o3"
				],
				"extensions": [
					".o3",
					".ogone"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"themes": [
			{
				"label": "Ogone",
				"uiTheme": "vs-dark",
				"path": "./themes/Ogone-color-theme.json"
			}
		],
		"snippets": [
			{
				"language": "ogone",
				"path": "./snippets/use.code-snippets"
			},
			{
				"language": "ogone",
				"path": "./snippets/require.code-snippets"
			},
			{
				"language": "ogone",
				"path": "./snippets/for-flag.code-snippets"
			},
			{
				"language": "ogone",
				"path": "./snippets/import.code-snippets"
			},
			{
				"language": "ogone",
				"path": "./snippets/component.code-snippets"
			},
			{
				"language": "ogone",
				"path": "./snippets/async.code-snippets"
			},
			{
				"language": "ogone",
				"path": "./snippets/proto.code-snippets"
			}
		],
		"grammars": [
			{
				"path": "./syntaxes/injection.template.json",
				"scopeName": "textnodes.evaluated.o3",
				"injectTo": [
					"source.o3"
				],
				"embeddedLanguages": {
					"meta.embedded.block.typescript": "typescript",
					"source.ts": "ts"
				}
			},
			{
				"path": "./syntaxes/injection.flag.json",
				"scopeName": "injection.flag.o3",
				"injectTo": [
					"source.o3"
				],
				"embeddedLanguages": {
					"meta.embedded.block.typescript": "typescript",
					"source.ts": "ts"
				}
			},
			{
				"path": "./syntaxes/injection.proto.json",
				"scopeName": "system.proto.o3",
				"injectTo": [
					"source.o3"
				]
			},
			{
				"path": "./syntaxes/injection.style.json",
				"scopeName": "injection.style.o3",
				"injectTo": [
					"source.o3"
				],
				"embeddedLanguages": {
					"meta.embedded.block.typescript": "css",
					"source.css": "css"
				}
			},
			{
				"language": "ogone",
				"scopeName": "source.o3",
				"path": "./syntaxes/ogone.tmLanguage.json",
				"embeddedLanguages": {
					"meta.embedded.block.typescript": "typescript",
					"meta.embedded.block.javascript": "javascript",
					"source.js": "js",
					"source.css": "css",
					"source.yaml": "yaml",
					"source.html": "html",
					"meta.embedded.block.ts": "ts",
					"meta.embedded.block.yml": "yml",
					"meta.embedded.block.yaml": "yaml",
					"meta.embedded.block.html": "html",
					"meta.embedded.block.css": "css"
				}
			}
		]
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"mocha": "^8.0.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.9.4"
	},
	"dependencies": {
		"any-json": "^3.1.0",
		"nodemon": "^2.0.4"
	},
	"__metadata": {
		"id": "f12ce84e-a862-45d1-acda-67e75ec2e2a3",
		"publisherDisplayName": "Rudy Alula",
		"publisherId": "b27750f1-4d35-488b-8856-5088c28629a6"
	}
}
