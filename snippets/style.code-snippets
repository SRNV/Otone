{
	"template": {
		"prefix": ["$$style", "<style "],
		"scope": "ogone",
		"description": "add style tag to component",
		"body": [
			"<style${0| global,| }>",
			"  ${1:// style is by default scoped, use global attribute}",
			"  @export const margin = 10px;",
			"  @export const padding = 10px;",
			"  @export const globalTheme = div { margin: $margin; padding: $padding; };",
			"</style>",
		]
	},
}